<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- action window for School Details -->
    <record id="action_school_details" model="ir.actions.act_window">
        <field name="name">School Details</field>
        <field name="res_model">school.detail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- action window for Student Details -->
    <record id="action_student_details" model="ir.actions.act_window">
        <field name="name">Student Details</field>
        <field name="res_model">student.detail</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="action_department_details" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">department.detail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_teacher_details" model="ir.actions.act_window">
        <field name="name">Teacher Details</field>
        <field name="res_model">teacher.detail</field>
        <field name="view_mode">tree,form,activity</field>
    </record>

    <menuitem
        id="school_menu"
        name="School ERP" />

    <menuitem
        id="school_details_menu"
        name="School"
        parent="school_menu"
        action="action_school_details"
    />

    <menuitem
        id="department_details"
        name="Department"
        parent="school_details_menu"
        action="action_department_details"

    />

    <menuitem
        name="Student"
        id = "student_menu"
        parent="school_menu"
        />

    <menuitem
        id="student_details_menu"
        name="Student Details"
        parent="student_menu"
        action="action_student_details"
    />

    <menuitem
        name="Faculty"
        id = "teacher_menu"
        parent="school_menu"
        />

    <menuitem
        id="teacher_details_menu"
        name="Teacher Details"
        parent="teacher_menu"
        action="action_teacher_details"
    />

</odoo>
