<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tree_department_details" model="ir.ui.view">
        <field name="name">Department.List</field>
        <field name="model">department.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="dept"/>
                <field name="activity"/>
                <field name="activity_date"/>
            </tree>
        </field>
    </record>

    <record id="view_form_department_details" model="ir.ui.view">
        <field name="name">Department.Details.Form</field>
        <field name="model">department.detail</field>
        <field name="arch" type="xml">
            <form>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_student"
                    icon="fa-star">
                        <field string="Participants" name="student_count" widget="statinfo"/>
                    </button>
                </div>
                <group>
                    <sheet>
                        <group name="group_top" col="4">
                            <field name="name"/>
                            <field name="dept"/>
                            <field name="students"/>
                            <field name="dept_no"/>
                            <field name="activity"/>
                            <field name="activity_date"/>
                        </group>

                        <notebook>
                            <page name="notes" string ="Notes" >
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="note" />
                                        <field name="teacher_id"/>
                                    </tree>
                                    <form>
                                        <field name="teacher_id"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </group>
            </form>
        </field>
    </record>
</odoo>

