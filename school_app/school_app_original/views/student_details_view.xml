<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <record id="view_form_student_details" model="ir.ui.view">
        <field name="name">Student Details Form</field>
        <field name="model">student.detail</field>
        <field name="arch" type="xml">

        <form >
            <header>
                <field name="state" widget="statusbar" statusbar_visible="Admittion,In_progress,Done"/>
                <button name="button_in_progress" class="oe_highlight"
                        states="draft" string="In Progress" type="object" help="Move Appointment to In Progress state"/>
            </header>

            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
                <group name="group_top">
                    <group name="group_left">
                        <field name="addmission_request_date" />
                        <field name="fname" />
                        <field name="mname" />
                        <field name="lname" />
                        <field name="date_of_birth" />
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="roll_number"/>
                        <field name="meadium" widget="radio" options="{'horizontal': true}" />
                        <field name="address" widget="char_emojis"/>
                        <field name="activity"/>
                        <field name ="grade"/>
                    </group>
                    <group name="group_right">
                        <field name="act_id"/>
                        <field name="level"/>
                        <field name="phone_number_s" />
                        <field name="phone_number_p" />
                        <field name="email" widget="email"/>
                        <field name="occupation" />
                        <field name="sports" />
                        <field name="color" widget="color_picker"/>
                        <field name="image" widget="image" />
                    </group>
                </group>
            </sheet>
            <footer>
                <sheet>

                </sheet>

            </footer>
        </form>
        </field>
    </record>

    <record id="view_tree_student_details" model="ir.ui.view">
        <field name="name">Student.List</field>
        <field name="model">student.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="fname"/>
                <field name="roll_number"/>
                <field name="act_id"/>
                <field name="phone_number_s"/>
           </tree>
        </field>
    </record>

    <record id="view_search_student_details" model="ir.ui.view">
        <field name="name">Student.Filters</field>
        <field name="model">student.detail</field>
        <field name="arch" type="xml">
        <search>
            <field name="roll_number"/>
            <field name="fname"/>
            <field name="gender"/>

            <group expand="0" string="Group By">
                <filter name="gender" string="Gender" domain="[]" context="{'group_by': 'gender'}"/>
            </group>
        </search>
        </field>
    </record>


    <record model="ir.ui.view" id="view_education_student_kanban">
        <field name="name">student.detail.kanban</field>
        <field name="model">student.detail</field>
        <field name="arch" type="xml">
            <kanban class="education_student_kanban">
                <field name="id"/>
                <field name="fname"/>
                <field name="mname"/>
                <field name="lname"/>
                <field name="date_of_birth" />
                <field name="roll_number"/>
                <field name="address" widget="char_emojis"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_res_partner_kanban">
                            <div class="o_kanban_image">
                                <t t-if="record.image">
                                    <img t-att-src="kanban_image('student.detail', 'image', record.id)" t-att-alt="record.fname"/>
                                </t>
                                <t t-if="!record.image">
                                    <img t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="fname"/>
                                    <field name="lname"/>
                                </strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul>
                                    <li t-if="record.roll_number">
                                        Roll Number :
                                        <field name="roll_number"/>
                                    </li>
                                    <li t-if="record.mname">
                                        Parent :
                                        <field name="mname"/>
                                    </li>
                                    <li t-if="record.phone_number_p">
                                        <i class="fa fa-phone"/>
                                        <field name="phone_number_p"/>
                                    </li>
                                    <li t-if="record.email">
                                        <i class="fa fa-envelope"/>
                                        <a t-attf-href="mailto:#{record.email.value}">
                                            <field name="email"/>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
